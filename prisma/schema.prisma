generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_URL")
}

model Question {
  id        String   @id @default(uuid())
  text      String
  metadata  Json?    // e.g., {"difficulty": "medium", "tags": ["next.js"]}
  createdAt DateTime @default(now())
  answers   UserAnswer[]
}

model UserAnswer {
  id         String          @id @default(uuid())
  userId     String          // Tie to Supabase auth.users if auth enabled
  questionId String
  answerText String
  timestamp  DateTime        @default(now())
  question   Question        @relation(fields: [questionId], references: [id])
  grading    GradingResult[]
}

model GradingResult {
  id       String     @id @default(uuid())
  answerId String
  score    Int
  feedback String
  gradedAt DateTime   @default(now())
  answer   UserAnswer @relation(fields: [answerId], references: [id])
}

model Report {
  id            String   @id @default(uuid())
  userId        String
  content       String   // AI-generated report text
  generatedAt   DateTime @default(now())
}
